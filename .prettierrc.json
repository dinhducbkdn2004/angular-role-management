{
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",

  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],

  "importOrder": [
    "^@angular/(.*)$",
    "^rxjs",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@app/(.*)$",
    "^@core/(.*)$",
    "^@shared/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": ["*.ts"],
      "options": { "parser": "typescript" }
    },
    {
      "files": ["*.html"],
      "options": { "parser": "angular" }
    }
  ]
}
